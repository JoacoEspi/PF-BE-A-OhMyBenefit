<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.OhMyBenefits" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/libre_franklin_thin</item>
        <item name="android:background">@drawable/rounded_background</item>
        <item name="strokeColor">@color/pink</item>
      
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/dark_hot_pink</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="Base.Widget.AppCompat.Button.Pink" parent="Base.Theme.OhMyBenefits">
        <item name="buttonStyle">@drawable/hotpink_button</item>
    </style>


    <style name="Theme.OhMyBenefits" parent="Base.Theme.OhMyBenefits" />

    <style name="NavDrawerTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/menu_color</item>
        <item name="itemTextColor">@color/black</item>
    </style>

    <style name="SearchStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/turquoise</item>
        <item name="android:fontFamily">@font/libre_franklin_thin</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>