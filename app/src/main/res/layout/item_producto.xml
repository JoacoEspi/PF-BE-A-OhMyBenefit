<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="0dp"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ToggleButton -->
        <ToggleButton
            android:id="@+id/prod_fav"
            style="@style/toggleButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:adjustViewBounds="true"
            android:background="@drawable/heart_icon_switch_off"
            android:padding="8dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- ImageView -->
        <ImageView
            android:id="@+id/image_prod"
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:contentDescription=""
            android:padding="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/logo_omb"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Nombre -->
        <TextView
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:fontFamily="sans-serif-thin"
            android:padding="8dp"
            android:scaleType="fitXY"
            android:text="Leche"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_prod" />

        <!-- CategorÃ­a -->
        <TextView
            android:id="@+id/categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:drawablePadding="3dp"
            android:fontFamily="sans-serif-light"
            android:padding="8dp"
            android:scaleType="fitXY"
            android:text="LACTEOS"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nombre" />

        <!-- Precio -->
        <TextView
            android:id="@+id/precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-70dp"
            android:adjustViewBounds="true"
            android:drawablePadding="6dp"
            android:fontFamily="sans-serif-light"
            android:padding="8dp"
            android:scaleType="fitXY"
            android:text="$500"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/categoria" />

        <!-- Detalle Button -->
        <Button
            android:id="@+id/detalle"
            android:layout_width="80dp"
            android:layout_height="29dp"
            android:backgroundTint="@color/turquoise"
            android:fontFamily="sans-serif"
            android:text="@string/detalle"
            android:textSize="8sp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/precio" />

        <!-- Agregar Button -->
        <Button
            android:id="@+id/agregar"
            android:layout_width="80dp"
            android:layout_height="29dp"
            android:backgroundTint="@color/turquoise"
            android:fontFamily="sans-serif"
            android:text="@string/agregar"
            android:textSize="8sp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/precio" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
